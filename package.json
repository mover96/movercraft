{
    "name": "typescript-express-starter",
    "version": "1.0.0",
    "description": "",
    "main": "index.js",
    "scripts": {
        "start": "cross-env-shell PROD=false npm-run-all build start:serverProd",
        "start:prod": "cross-env-shell PROD=true npm-run-all build start:serverProd",
        "start:all": "concurrently -c cyan,magenta -n nodemon_server,tsc_watch -k true \"npm:start:server\" \"npm:start:watch\"",
        "start:server": "nodemon --inspect ./dist/server.js",
        "start:serverProd": "node ./dist/server.js",
        "start:watch": "tsc -p ./tsconfig.backend.json --watch",
        "build:backend": "tsc -p ./tsconfig.backend.json",
        "build": "npm-run-all lint clean build:backend copyhtml",
        "lint": "eslint -c .eslintrc.js --ext .ts .",
        "test": "echo \"Error: no test specified\" && exit 1",
        "clean": "rimraf ./dist",
        "copyhtml": "cp index.html ./dist/index.html"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "dependencies": {
        "dotenv": "^8.2.0",
        "express": "^4.17.1",
        "get-nonce": "^1.0.1",
        "typescript": "^4.1.3",
        "ws": "^7.4.0"
    },
    "devDependencies": {
        "@types/dotenv": "^8.2.0",
        "@types/express": "^4.17.11",
        "@types/node": "^14.14.22",
        "@types/ws": "^7.4.0",
        "@typescript-eslint/eslint-plugin": "^4.14.1",
        "@typescript-eslint/eslint-plugin-tslint": "^4.14.1",
        "@typescript-eslint/parser": "^4.14.1",
        "concurrently": "^5.3.0",
        "cross-env": "^7.0.3",
        "eslint": "^7.18.0",
        "eslint-config-prettier": "^7.2.0",
        "eslint-plugin-import": "^2.22.1",
        "eslint-plugin-jsdoc": "^31.4.0",
        "eslint-plugin-prefer-arrow": "^1.2.3",
        "eslint-plugin-react": "^7.22.0",
        "nodemon": "^2.0.7",
        "npm-run-all": "^4.1.5",
        "rimraf": "^3.0.2",
        "tslint": "^6.1.3"
    }
}
